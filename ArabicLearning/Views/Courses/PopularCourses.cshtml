@{
    ViewData["Title"] = "Popular Courses";
}
@model IEnumerable<ArabicLearning.Repositories.Models.Course>

<h2 class="align-self-center text-primary">Popular Courses</h2>

<div class="table table-responsive"style="background-image:url('https://picsum.photos/200');
       height:auto;">
    @foreach(var course in Model)
    {
        <div class="bg-dark" 
            style="text-align:center;margin:5%;
             color:lightcyan; padding:5%">
                <h4>@course.Name</h4>
                <p class="font-italic"> by @course.Teacher</p>
                <a class="border-success bg-dark text-center" 
                    style="border-radius:15px; padding:2%"
                    href="Courses/@course.Type"
                    > #@course.Level </a>
        </div>
    }
    
</div>

